{
  "manifest_version": 3,
  "name": "Clippable",
  "version": "1.0",
  "description": "Sends selected text to the Clippable web app.",
  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}